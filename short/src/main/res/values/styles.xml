<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"/>
    <!-- Application theme. -->
    <style name="ShortTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/short_color_27</item>
        <item name="colorPrimaryDark">@color/short_color_27</item>
        <item name="colorAccent">@color/short_color_27</item>
    </style>

    <!--登出样式-->
    <style name="tip_login_out" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_style</item>
    </style>

    <style name="divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divide</item>
    </style>

    <style name="divide2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#272b35</item>
    </style>


    <style name="paike_text_option_one">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="paike_text_tip_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- editview设置样式 -->
    <style name="common_edittext_style">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="setting_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="paike_text_option_two">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

    <style name="divide_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide</item>
    </style>

    <style name="divide_vertical2">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#262a33</item>
    </style>

    <style name="video_process_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/edit_video_name_back</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppLoginTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TansferTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Loding_dialog样式Start -->
    <style name="tip_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置无遮罩层 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 横分割线 -->
    <style name="horizontal_line">
        <item name="android:background">#e1e1e1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <!-- Loding_dialog样式Start -->
    <style name="Dialog_bocop">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置无遮罩层 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- 直播类型popuwindow样式 -->
    <style name="PopupAnimation2" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <!-- 我的白色背景样式 -->
    <style name="mine_bg_style">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 个人设置样式 -->
    <style name="personal_setting_item_tv_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="personal_setting_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="personal_setting_item_tip_style">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tip_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="iv_right_go_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@mipmap/extrend</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <!-- 通用lv样式 -->
    <style name="common_lv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:divider">#e1e1e1</item>z
        <item name="android:dividerHeight">0.3dp</item>
    </style>

    <!-- 设置样式 -->
    <style name="setting_text_tip_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--头条时间选择器样式-->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="edit_text_title">
        <item name="android:maxLength">12</item>
    </style>

    <!-- 直播设置popuwindow样式 -->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/live_setting_popu_open_anim</item>
        <item name="android:windowExitAnimation">@anim/live_setting_popu_close_anim</item>
    </style>

    <style name="PopupAnimationHorizontal" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/live_setting_popu_open_anim_hor</item>
        <item name="android:windowExitAnimation">@anim/live_setting_popu_close_anim_hor</item>
    </style>
    <declare-styleable name="SpeedPickView">
        <attr name="items" format="integer">3</attr>
        <attr name="item_wdith" format="dimension">1</attr>
        <attr name="item_color" format="color"/>
    </declare-styleable>
</resources>
