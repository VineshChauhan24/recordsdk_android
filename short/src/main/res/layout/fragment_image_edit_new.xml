<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/half_transparent">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/item_cg_text_back2"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_cg_tab_property"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cg_property_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cg_property_out" />

            <TextView
                android:id="@+id/tv_cg_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="属性"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/iv_cg_property_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange2"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

        <Button
            android:id="@+id/btn_cg_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bak"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_cg_edit"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/item_cg_text_back2"
        android:paddingTop="5dp">

    </android.support.v4.view.ViewPager>

</LinearLayout>
